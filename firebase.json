{
  "hosting": {
    "public": "benchmark",
    "site": "calm-the-calamities",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "dist/index.html"
      },
      {
        "source": "/benchmark1",
        "destination": "benchmark1/index.html"
      },
      {
        "source": "/benchmark2",
        "destination": "benchmark2/index.html"
      },
      {
        "source": "/benchmark3",
        "destination": "benchmark3/index.html"
      }
    ]
  }
}
